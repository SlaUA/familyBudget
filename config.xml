<widget id="com.example.familyBudget" version="0.0.1">
    <name>Семейный бюджет</name>
    <description>
        Simple budget app.
    </description>
    <author email="wenzelua@gmail.com" href="">
        wenzelUA
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <platform name="android">
        <preference name="Fullscreen" value="true"/>
        <preference name="Orientation" value="portrait"/>
        <icon src="assets/images/icon.png" width="180" height="180"/>
    </platform>
    <plugin name="com.flyacts.crosswalk.engine" spec="1.3.1" source="pgb"/>
    <icon src="assets/images/icon72.png" width="72" height="72"/>
    <icon src="assets/images/icon48.png" width="48" height="48"/>
    <icon src="assets/images/icon36.png" width="36" height="36"/>

    <splash src="assets/images/splashes/splash-hdpi-port" />
    <splash src="assets/images/splashes/splash-ldpi-port" qualifier="port-ldpi"/>
    <splash src="assets/images/splashes/splash-ldpi-land" qualifier="land-ldpi"/>

    <splash src="assets/images/splashes/splash-mdpi-port" qualifier="port-mdpi"/>
    <splash src="assets/images/splashes/splash-mdpi-land" qualifier="land-mdpi"/>

    <splash src="assets/images/splashes/splash-hdpi-port" qualifier="port-hdpi"/>
    <splash src="assets/images/splashes/splash-hdpi-land" qualifier="land-hdpi"/>

    <splash src="assets/images/splashes/splash-xhdpi-port" qualifier="port-xhdpi"/>
    <splash src="assets/images/splashes/splash-xhdpi-land" qualifier="land-xhdpi"/>

    <splash src="assets/images/splashes/splash-xxhdpi-port" qualifier="port-xxhdpi"/>
    <splash src="assets/images/splashes/splash-xxhdpi-land" qualifier="land-xxhdpi"/>

    <splash src="assets/images/splashes/splash-xxxhdpi-port" qualifier="port-xxxhdpi"/>
    <splash src="assets/images/splashes/splash-xxxhdpi-land" qualifier="land-xxxhdpi"/>
</widget>